<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gr.scify.icsee">

    <queries>
        <package android:name="gr.scify.icsee" />
    </queries>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launchernew"
        android:label="@string/app_name"
        android:logo="@drawable/icsee_logo"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ImgViewerActivity"
            android:exported="false"
            android:label="@string/title_activity_img_viewer" />
        <activity
            android:name=".ICSeeRealtimeActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ICSeeStartActivity"
            android:exported="true"
            android:label="ICSee"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="@string/filter_view_http_icsee">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="gr.scify.icsee"
                    android:scheme="https" />
                <data
                    android:host="gr.scify.icsee"
                    android:scheme="app" />
            </intent-filter>
        </activity>
        <activity
            android:name=".camera.ImageView"
            android:label="@string/title_activity_image_edit"
            android:screenOrientation="landscape"/>
    </application>

</manifest>
